root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newLine = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,yaml,json,xml,babelrc,prettierrc}]
indent_size = 2
indent_style = space

[*.{vue,js,cjs,jsx,ts,tsx,html,scss,sass,css}]
indent_size = 2
indent_style = space

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
